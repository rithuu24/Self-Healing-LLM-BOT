{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    /* --- THE FIX FOR YOUR WARNINGS --- */
    "strict": true,                                 
    "forceConsistentCasingInFileNames": true,       
    "skipLibCheck": true,

    /* --- SHADCN & PATH ALIASES --- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* --- VITE & MODERN BUILD FLAGS --- */
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,                        
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src", 
    "vite.config.ts", 
    "postcss.config.js", 
    "tailwind.config.js"
  ]
}